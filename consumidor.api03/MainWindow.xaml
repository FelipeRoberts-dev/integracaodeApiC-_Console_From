<Window x:Class="consumidor.api03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:consumidor.api03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="777*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnAtualizar" Grid.Column="1" Content="Button" HorizontalAlignment="Left" Margin="24,57,0,0" VerticalAlignment="Top" Width="158" Height="57" Click="Button_Click"/>
        <DataGrid x:Name="dtgGrid" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,151,183,120"/>

    </Grid>
</Window>
